{
  "name": "claude-agent-mobile",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n server,web -c \"#c67a3b,#8b6f5a\" \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "npm run build:server && concurrently -n tsc,server -c \"#b08a6f,#c67a3b\" \"tsc -p server/tsconfig.json --watch\" \"node --watch server/dist/index.js\"",
    "dev:web": "vite",
    "build:server": "tsc -p server/tsconfig.json",
    "build": "npm run build:server && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.15",
    "dompurify": "^3.2.4",
    "marked": "^12.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.6"
  }
}
